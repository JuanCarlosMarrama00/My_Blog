{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block body %}
	<div id="contact" class="contact">
		<div class="container">
			<div class="row">
				<div class="col-md-6">

					{{ form_start(registrationForm, {'attr':{'id':'request','class':'main_form'}}) }}
						{{ form_errors(registrationForm) }}
							<div class="row">
								<div class="col-md-12 ">
									<h3>Register</h3>
								</div>
								<div class="col-md-12 ">
									{{ form_row(registrationForm.name, {'attr': {'class':'contactus', 'placeholder':'Name'}}) }}
								</div>
								<div class="col-md-12">
									{{ form_row(registrationForm.username, {'attr': {'class':'contactus', 'placeholder':'Username'}}) }}
								</div>
								<div class="col-md-12">
									{{ form_row(registrationForm.email, {'attr': {'class':'contactus', 'placeholder':'Email'}}) }}
								</div>
								<div class="col-md-12">
									{{ form_row(registrationForm.plainPassword, {'attr': {'class':'contactus', 'placeholder':'Password'}}) }}
								</div>
								<div class="col-md-12">
									{{ form_row(registrationForm.fotoPerfil, {'attr': {'class':'foto'}}) }}
								</div>
								<div class="col-md-12">
									{{ form_row(registrationForm.Send, {'attr': {'class':'send_btn'}}) }}
								</div>
							</div>
					{{ form_end(registrationForm) }}
				</div>
			</div>
		</div>
	</div>

{% endblock %}
